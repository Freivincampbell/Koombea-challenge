<div class="login-page bg-light save-form">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="bg-white shadow rounded">
          <div class="row">
            <div class="col-md-12">
              <div class="form-left h-100 py-5 px-5">
                <%= form_with(model: Page) do |form| %>
                  <div class="row">
                    <div class="col-10">
                      <div class="input-group">
                        <div class="input-group-text"><i class="bi bi-file-earmark-break"></i></div>
                        <%= form.text_field :link, class: "form-control", placeholder: "Add new page" %>
                      </div>
                    </div>
                    <div class="col-2">
                      <%= form.submit "Submit", class: "btn btn-primary" %>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>